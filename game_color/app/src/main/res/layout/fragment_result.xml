<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:padding="20dp">

    <TextView
        android:id="@+id/TextoPuntaje"
        android:text="Puntaje: 0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/TextoMensaje"
        android:text="¡Bien hecho!"
        android:textSize="20sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/TextoPuntajeAlto"
        android:text="Puntaje más alto: 0"
        android:textSize="16sp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/BotonJugarDeNuevo"
        android:text="Volver a Jugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
